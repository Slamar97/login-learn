{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "prettier" // <- must be latest
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-param-reassign": [2, { "props": false }],
    "no-unused-vars": "warn",
    "no-await-in-loop": "off",
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "no-restricted-syntax": "off"
  }
}
